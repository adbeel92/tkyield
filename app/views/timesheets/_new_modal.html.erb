<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"> Create new Timer <span> <%= @day_selected.strftime("%A, %b %d")  %> </span></h4>
      </div>
      <div id="new-timer-form" class="modal-body">
        <%= form_for(new_timesheet, remote: true) do |f| %>
          <p>
            <%= f.label :project %><br />
            <%= f.select :project_id, projects_helper.collect{ |t| [t.name, t.id]}, {:prompt => "Select a project" } %>
          </p>
          <p>
            <%= f.label :task %><br /> 
            <%= f.select :task_id, @tasks.collect{ |t| [t.name, t.id]}, {:prompt => "Select a task" } %> 
          </p>
            <%= f.hidden_field :belongs_to_day%>
          <div class="field">
            <%= f.label :notes %><br>
            <%= f.text_area :notes %>
          </div>
          <div class="total_time">
            <%= f.label :total_time %><br>
            <%= f.text_field :total_time %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit 'Start Timer', :class => 'btn btn-primary'%>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#timesheet_belongs_to_day').attr('value', "<%= @day_selected %>");

    // document.getElementById('timesheet_belongs_to_day').setAttribute('value', "<%#= @day_selected %>");
  });

  $('#timesheet_project_id').change(function () {
    $.ajax({
          type:'GET', 
          url: "<%= tasks_projects_path %>",
          data: {
            id : $('#timesheet_project_id').val()
          },
          dataType: "script"
        });
  });
</script>
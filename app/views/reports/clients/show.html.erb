<h2 class="page-header"> <%= @client.name %> <small> Client</small> </h2>
<p>Hours Tracked: <%= get_seconds_in_hours_minutes(@client.total_time) %></p>

<div role="tabpanel">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist" id="dates-tab">
      <li role="presentation" class="active">
        <a href="#projects" aria-controls="projects" role="tab" data-toggle="tab">Projects</a>
      </li>
  </ul>
</div>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="projects">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name </th>
              <th>Client </th>
              <th>Hours</th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= link_to project.name, reports_project_path(project) %></td>
                <td><%= project.client.name %></td>
                <td><%= get_seconds_in_hours_minutes(project.project_total_time_between_dates(@beginning,@end)) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<h2 class="page-header"> <%= @user.full_name %> <small> Project </small> </h2>
<p>Hours Tracked: <%= get_seconds_in_hours_minutes(@user.user_total_time) %></p>

<div role="tabpanel">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist" id="dates-tab">
      <li role="presentation" class="active">
        <a href="#projects" aria-controls="projects" role="tab" data-toggle="tab">Projects</a>
      </li>
  </ul>
</div>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="projects">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name </th>
              <th>Clients </th>
              <th>Hours</th>
            </tr>
          </thead>
          <tbody>
            <% @timesheets.each do |timesheet| %>
              <tr>
                <td><%= link_to timesheet.project.name, reports_user_project_path(@user, timesheet.project) %></td>
                <td><%= timesheet.project.client_name %></td>
                <td><%= get_seconds_in_hours_minutes(timesheet.total) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

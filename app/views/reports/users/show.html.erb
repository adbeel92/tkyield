<h2 class="page-header"> <%= @user.full_name %> <small> Collaborator </small>
    <div class="row align-right">
        <%= link_to '<i class="fa fa-file-excel-o"></i>  Download as Excel'.html_safe, reports_user_path(format: "xlsx"), class: "btn btn-success"%>
    </div>
</h2>

<div id="date_navigation">
    <%= render "date_navigation" %>
</div>

<script type="text/javascript">

    function findActiveTab(){
        var active;
        $("#tabContainer").children('.tab-pane').each(function() {
            if ($(this).hasClass("active")){
                active = $(this);
            }
        });
        return active.attr('id');
    }

    $( document ).on("click",".change-report", function(){
        var dateForParam = $(this).data('date');
        var typeForParam = $(this).data('type');
        var user = $(this).data('user');
        var tabForParam = findActiveTab();
        $.ajax({
            type:'GET',
            url: "<%= reports_user_path('user_id') %>".replace("user_id",user),
            data: { type : typeForParam, date : dateForParam , tab : tabForParam },
            dataType: "script"
        });
    })

</script>
<%= form_tag(reports_on_time_index_path,  {:method => :get} ) do %>
    <div class="row">
        <div class="col-lg-6 text-center">
        	<strong>Team</strong>
        	<%= select_tag "team",options_from_collection_for_select(@teams, "id", "name"), prompt: "- Select a Team -" ,class:"form-control select",:data => { :team_id => 1}%>           
        </div>
        <div class="col-lg-6 text-center">
            <strong>Collaborators</strong>
            <%= select_tag "collaborators",options_from_collection_for_select(@collaborators, "id", "full_name"), prompt: "- Select a Collaborator -" ,class:"form-control"%>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-1 text-center">
            From: 
        </div>
        <div class="col-lg-5 text-center">
            <%= text_field_tag "beginning",nil, class:"form-control datepicker", placeholder: date_format(@beginning) %>
        </div>
        <div class="col-lg-1 text-center">
            to:
        </div>
        <div class="col-lg-5 text-center">
            <%= text_field_tag "end",nil, class:"form-control datepicker" , placeholder: date_format(@end)%>
        </div>
    </div>
    <br>
    <div class="align-right">
        <div><%= submit_tag 'Go', :data => {:team => @team, :collaborator => @collaborator , :beginning => @beginning, :end => @end} %></div>
    </div>
<% end %>
<br>
<br>
<div class="tabbable tabs-left">
    <ul class="nav nav-pills nav-justified">
        <li class="<%= 'active' if @tab == 'tab1' %>"><a href="#tab1" data-toggle="tab">
        <i class="fa fa-history"></i> Daily Activity</a></li>
        <li class="<%= 'active' if @tab == 'tab2' %>"> <a href="#tab2" data-toggle="tab">
        <i class="fa fa-pie-chart"></i> Summary Activity</a></li>
    </ul>
<div class="tab-content" id="tabContainer">
    <div class="<%= if @tab == 'tab1' then 'tab-pane active'  else 'tab-pane' end%>" id="tab1">
		<%= render "daily" %>
    </div>
    <div class="<%= if @tab == 'tab2' then 'tab-pane active'  else 'tab-pane' end%>" id="tab2">
		<%= render "summary" %>
    </div>
</div>
</div>
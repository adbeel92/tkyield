<div class="row">
    <div class="btn-group col-lg-3" style="padding-top: 15px">
        <button type="button" class="change-report btn btn-default <%='active' if @type=='Monthly'%>" data-type = "Monthly" data-date = <%= @day_selected %>> Monthly </button>
        <button type="button" class="change-report btn btn-default <%='active' if @type=='Weekly'%>" data-type = "Weekly" data-date = <%= @day_selected %>> Weekly </button>
    </div> 
</div>
<div class="row">
    <div class="btn-group col-lg-3" style="
    padding-top: 15px">
        <button type="button" class="change-report btn btn-default" data-type = <%= @type %> data-date = <%= @type=='Weekly' ? @day_selected.last_week : @day_selected.last_month%> >
            <i class="fa fa-arrow-left"></i>
        </button>
        <button type="button" class="change-report btn btn-default" data-type = <%= @type %> data-date = <%= @type=='Weekly' ? @day_selected.next_week : @day_selected.next_month%> >
            <i class="fa fa-arrow-right"></i>
        </button>
    </div> 
    <div class="col-lg-6">
        <h3><strong>
            This
            <% if @type =="Weekly"%>
            Week : </strong> <small> <%= full_date_format(@beginning) %> - <%= full_date_format(@end) %> </small> 
            <% else %>
            Month : </strong> <small><%= month_format(@day_selected) %> </small>
            <% end %>
            <%= year_format(@day_selected) %></h3> 
    </div>
    <div class="col-lg-2 to-the-right" style="
    padding-top: 15px">
    <% if @type == "Weekly" %>
     <%= link_to '<i class="fa fa-arrow-down"></i> Current Week'.html_safe , '#', :data => {:date => @today, :type => @type},:id => "today_date", :class => 'change-report btn btn-primary' %>
     <% elsif @type == "Monthly" %>
     <%= link_to '<i class="fa fa-arrow-down"></i> Current Month'.html_safe , '#', :data => {:date => @today, :type => @type},:id => "today_date", :class => 'change-report btn btn-primary' %>
     <% end %>
     
     </div>
</div>
<br>

<h1 class="page-header"> Reports <small> by</small> </h1>

<div class="tabbable tabs-left">
<ul class="nav nav-pills nav-justified">
    <li class="<%= 'active' if @tab == 'tab1' %>"><a href="#tab1" data-toggle="tab"><i class="fa fa-suitcase"></i>  Clients</a></li>
    <li class="<%= 'active' if @tab == 'tab2' %>"> <a href="#tab2" data-toggle="tab"><i class="fa fa-folder-open"></i>  Projects</a></li>
    <li class="<%= 'active' if @tab == 'tab3' %>"> <a href="#tab3" data-toggle="tab"><i class="fa fa-user"></i>  Collaborators</a></li>
</ul>
<div class="tab-content" id="tabContainer">
    <div class="<%= if @tab == 'tab1' then 'tab-pane active'  else 'tab-pane' end%>" id="tab1">
		<%= render "clients_report" %>
    </div>
    <div class="<%= if @tab == 'tab2' then 'tab-pane active'  else 'tab-pane' end%>" id="tab2">
		<%= render "projects_report" %>
    </div>
    <div class="<%= if @tab == 'tab3' then 'tab-pane active'  else 'tab-pane' end%>" id="tab3">
        <%= render "collaborators_report" %>
    </div>
</div>
</div>
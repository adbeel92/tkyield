<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>SUNDAY</th>
      <th>MONDAY</th>
      <th>TUESDAY</th>
      <th>WEDNESDAY</th>
      <th>THURSDAY</th>
      <th>FRIDAY</th>
      <th>SATURDAY</th>
    </tr>
  </thead>
  <tbody>
    <div id="event-row">
      <% for i in 0..6 %>
        <td width="15%">
          <% @schedule.events.each do |e| %>
            <% if e.day_of_week.to_date.wday == i %>
              <li class="list-group-item">
                <%= link_to e.name, "#", class:"prueba", data: { toggle: "modal", "edit-event-path": "#{schedule_event_path(@schedule, e)}", event: e  } %>

              </li>
            <% end %>
          <% end %>
        </td>
      <% end %>
    </div>
  </tbody>
</table>

<%= render 'events/detail_event' %>

<script type="text/javascript">
  $(document).ready(function(){
    $(".prueba").click(function(e){
      e.preventDefault();
      $("#edit-event-form").attr("action", $(this).data("edit-event-path"));
      var eventJSON = $(this).data("event");
      $("#name-event").val(eventJSON["name"]);
      $("#start-event").val(eventJSON["inTime"]);
      $("#finish-event").val(eventJSON["outTime"]);
      $("#day-event").val(eventJSON["day_of_week"]);
      $("#detail-event").modal("show");
    })
  })
</script>
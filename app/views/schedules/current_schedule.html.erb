<h1 class="page-header">
	<%=  current_user.first_name %>'s Current schedule
</h1>	
<h2>
	<%= @current.name%>
</h2>
<div class="modal-show">
	<div class="align-right" id="create-event">
		<%= link_to new_schedule_event_path(@current), remote: true do %>
			<button type="button" class="btn btn-primary btn-lg">Create Event</button>
		<% end %>
	</div>


	<div class="row" id="event-caledar">
		<div class="col-md-10 col-md-offset-1" id="calendar" data-schedule-path="<%=schedule_events_path(@current.id)%>"></div>
	</div>
	
	<div class="row">
		<div class="modal fade" id="event-modal" tabindex="1" aria-labelledby="myModalLabel" aria-hidden="true">
		</div>
	</div>

</div>

<%= link_to 'Schedules', list_schedules_path, class: "btn btn-primary " %>
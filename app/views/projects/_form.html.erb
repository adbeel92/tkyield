<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.2/css/bootstrap-select.min.css" />
<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.2/js/bootstrap-select.min.js"></script>


<%= nested_form_for @project do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="input-group">
      <span class="input-group-addon">Name</span>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <br>
  </div>

  <div class="field">
    <div class="input-group">
      <span class="input-group-addon">Description</span>
      <%= f.text_field :description, class: "form-control" %>
    </div>
    <br>
  </div>

  <div class="input-group">
    <span class="input-group-addon">Client</span>
    <%= f.select :client_id, clients_helper.collect{ |t| [t.name, t.id]}, {:prompt => "Select a client" } , class: "form-control" %>
  </div>
  <br>
  
  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body">
          <%= f.fields_for :task_projects do |task_form| %>
            <div>
              <div class="col-sm-10">
                <%= task_form.select :task_id, tasks_helper.collect{ |t| [t.name, t.id]}, {:prompt => "Select a task" } , class: "form-control select-task" %>
              </div>
              <div class="col-sm-2">
                <%= task_form.link_to_remove "X", class: "btn btn-danger" %>
              </div>
            </div>
          <% end %>

          <%= f.link_to_add "Add a Task", :task_projects , id: "add_task",class: "btn btn-xs btn-default" %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Employees</h3>

        </div>
        <div class="panel-body">
          <%= f.fields_for :user_projects do |user_form| %>
          <div class="col-sm-10">
          <%= user_form.select :user_id, users_helper.collect{ |u| [u.full_name, u.id]}, {:prompt => "Select a user"} , class: "form-control" %>
          </div><div class="col-sm-2">
          <%= user_form.link_to_remove "X", class: "btn btn-xs btn-danger"%>
          </div>
          <% end %>

          <%= f.link_to_add "Add a employee", :user_projects , class: "btn btn-xs btn-default"%>
        </div>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-lg btn-warning" %>
  </div>
<% end %>

<script type="text/javascript">
    $( document ).on( "change", ".select-task", function() {
      var ultimo;
      $(".select-task").each(function() {
        if ( $(this).is(":visible"))
          ultimo = $( this );
      });
      if ($(this).is(ultimo)){
        $( "#add_task").click();
      }
      });

    function validateUnique(class){
        var arraySelect = new Array();

        $('.class').each(function() {
          if ($(this).parent().css(.is(':visible')){
            arraySelect.push($(this).val());
          }     
        });

        $('.class').each(function() {
          if ($(this).parent().css(.is(':visible')){
            $(this).children('option').each(function() {
              $(this).removeAttr('disabled');
           });
        }

        $('.class').each(function() {

          if ($(this).parent().css(.is('visible')){

            var comboSelectedValue = $(this).val();

            $(this).children('option').each(function() {
              var disableMe = false;
              var thisVal = $(this).val();
              
              for(var i=0, len=arraySelect.length; i<len;i++){
                if (disableMe==false){
                  if (thisVal != comboSelectedValue){
                    if ( thisVal === arraySelect[i] ){
                      disableMe = true;
                    }
                  }
                }
              }

              if (disableMe){
                $(this).attr('disabled', true);
              }

            });
          
          }

        });

      }

      $('.class').live("change", function() {

        validateUnique(class);
        
      });
    

</script>
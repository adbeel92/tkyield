.stopped-timer{
	font-size: 14px;
	height: 35px;
	line-height: 35px;
	width: 74px;
	background: #fafafa;
	background: -webkit-linear-gradient(top, #fff, #eee);
	background: -moz-linear-gradient(top, #fff, #eee);
	background: -o-linear-gradient(top, #fff, #eee);
	background: linear-gradient(to bottom, #fff, #eee);
	border: 1px solid #bbbbbb;
	border-radius: 4px;
	box-shadow: inset 0 1px 1px rgba(255,255,255,0.2);
	color: #555555;
	cursor: pointer;
	display: inline-block;
	font-weight: 500;
	margin: 0;
	outline: 0;
	padding: 0 4px;
	text-align: center;
	text-shadow: 0 1px 0 white;
	text-decoration: none;
	vertical-align: middle;
	white-space: nowrap;
	-webkit-font-smoothing: antialiased;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	.running-icon{
		border: 2px solid rgba(0,0,0,0.3);
		border-radius: 30px;
		box-shadow: 0 1px 0 white, inset 0 1px 0 white;
		float: left;
		height: 21px;
		margin: 6px 0 0 4px;
		width: 21px;
		-webkit-box-sizing: border-box;
		-moz-box-sizing: border-box;
		box-sizing: border-box;
		i{
			background: url(<%= asset_path 'stopped-timer.png' %>) no-repeat;
			background-size: 21px 21px;
			display: block;
			height: 21px;
			margin: -2px 0 0 -2px;
			width: 21px;
		}
	}
}

.running-timer{
	background: #1F8Fe5;
	background: -webkit-linear-gradient(top, #53b2fc, #1F8Fe5);
	background: -moz-linear-gradient(top, #53b2fc, #1F8Fe5);
	background: -o-linear-gradient(top, #53b2fc, #1F8Fe5);
	background: linear-gradient(to bottom, #53b2fc, #1F8Fe5);
	color: white;
	font-weight: bold;
	text-shadow: 0 -1px 0 rgba(0,0,0,0.4);
	font-size: 14px;
	height: 35px;
	line-height: 32px;
	width: 74px;
	border: 1px solid #075fa9;
	border-radius: 4px;
	box-shadow: inset 0 1px 1px rgba(255,255,255,0.2);
	cursor: pointer;
	display: inline-block;
	margin: 0;
	outline: 0;
	padding: 0 4px;
	text-align: center;
	text-decoration: none;
	vertical-align: middle;
	white-space: nowrap;
	-webkit-font-smoothing: antialiased;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	.running-icon{
		float: left;
		height: 21px;
		margin: 6px 0 0 4px;
		width: 21px;
		-webkit-box-sizing: border-box;
		-moz-box-sizing: border-box;
		box-sizing: border-box;
		i{
			background: url(<%= asset_path 'running-timer.gif' %>) no-repeat;
			background-size: 21px 21px;
			display: block;
			height: 26px;
			margin: -2px 0 0 -2px;
			width: 26px;
		}
	}
	&:hover{
		color: #EEE;
	}
}